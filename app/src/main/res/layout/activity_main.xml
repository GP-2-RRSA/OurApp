<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/last"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        app:elevation="2dp"
        android:background="@drawable/rectangle"
        app:menu="@menu/menu_items"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="30dp"
        app:itemRippleColor="@android:color/transparent"
        app:itemIconTint="@drawable/item_selector"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="254dp"
        android:id="@+id/bottomBar"/>

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/botton"
        app:backgroundTint="@null"
        android:text="حذف المجموعة"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginLeft="330dp"
        android:layout_marginBottom="90dp"
        app:layout_anchor="@+id/imageView"
        app:layout_anchorGravity="end|center"
        app:srcCompat="@drawable/remove" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#BDBCBC"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            > </View>

        <Button
            android:id="@+id/reprttext"
            android:layout_width="332dp"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="40dp"

            android:layout_marginBottom="800dp"
            android:drawableLeft="@drawable/ic_outline_edit_24"
            android:paddingTop="12dp"
            android:shadowColor="@color/white"
            android:text="عائلتي"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.741"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboveline"
            android:textAlignment="textStart"
            android:gravity="start"
            android:background="@drawable/reqtunguler"
            app:backgroundTint="@null"

            />
    </LinearLayout>



    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="332dp"
        android:layout_height="190dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboveline"
        app:srcCompat="@drawable/reqtunguler"/>
    <Button
        android:id="@+id/addmeMember"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="800dp"
        android:drawableLeft="@drawable/ic_arrow"
        android:drawableRight="@drawable/ic_baseline_person_add_24"
        android:backgroundTint="?android:attr/windowBackground"
        android:paddingTop="12dp"
        android:shadowColor="@color/white"
        android:text="إضافة عضو"
        android:textAlignment="textStart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboveline"
        android:gravity="start" />
        />
    <Button
        android:id="@+id/deletMember"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="800dp"
        android:drawableLeft="@drawable/ic_arrow"
        android:drawableRight="@drawable/ic_baseline_person_remove_alt_1_24"
        android:backgroundTint="?android:attr/windowBackground"
        android:paddingTop="12dp"
        android:shadowColor="@color/white"
        android:text="حذف عضو"
        android:textAlignment="textStart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboveline"
        android:gravity="start" />

    <Button
        android:id="@+id/addItem"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="800dp"
        android:drawableLeft="@drawable/ic_arrow"
        android:drawableRight="@drawable/ic_baseline_add_circle_outline_24"
        android:backgroundTint="?android:attr/windowBackground"
        android:paddingTop="12dp"
        android:shadowColor="@color/white"
        android:text="إضافة ممتلك"
        android:textAlignment="textStart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboveline"
        android:gravity="start" />

    <Button
        android:id="@+id/deletItem"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="800dp"
        android:drawableLeft="@drawable/ic_arrow"
        android:drawableRight="@drawable/ic_baseline_delete_forever_24"
        android:backgroundTint="?android:attr/windowBackground"
        android:paddingTop="12dp"
        android:shadowColor="@color/white"
        android:text="حذف ممتلك"
        android:textAlignment="textStart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboveline"
        android:gravity="start" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>
